<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cream"
    tools:context=".ForgetPassword">
     
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/MainGreen"
        app:cardCornerRadius="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:id="@+id/TextForgetPassword"

                />
            <EditText
                android:drawableStart="@drawable/baseline_email"
                android:drawablePadding="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonborder1"
                android:hint="Email"
                android:layout_below="@+id/TextForgetPassword"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/MainGreen"
                android:padding="16dp"
                android:id="@+id/editEmailForget" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backTo"
                android:layout_below="@+id/editEmailForget"
                android:text="Back To"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextLogin"
                android:clickable="true"
                android:layout_toRightOf="@+id/backTo"
                android:layout_below="@+id/editEmailForget"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/Red"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ForgetPasswordButton"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="Forget Password"
                android:textColor="@color/Cream"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/buttonborder2"
                android:layout_centerHorizontal="true"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp"
                ></Button>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
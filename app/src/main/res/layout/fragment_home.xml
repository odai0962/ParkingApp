<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <data >
        <variable
            name="clickHandler"
            type="com.example.parkingapp.FragmentHomeClickHandler" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/MainGreen">
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/homeborder"
                android:id="@+id/view"
                ></View>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/profileimage"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"></de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:clickable="true"
                android:id="@+id/notificationButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="notification"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bell" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Find A "
                android:id="@+id/LetsFindA"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/profileimage"
                ></TextView>
            <TextView
                android:id="@+id/parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking "
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/MainGreen"
                android:textSize="18sp"
                android:layout_below="@+id/profileimage"
                android:layout_toRightOf="@+id/LetsFindA"
                android:layout_marginTop="8dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space "
                android:id="@+id/SpaceText"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/MainGreen"
                android:textSize="18sp"
                android:layout_below="@+id/LetsFindA"
                android:layout_marginLeft="8dp"

                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For You"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@+id/LetsFindA"
                android:layout_toRightOf="@+id/SpaceText" />

            <androidx.recyclerview.widget.RecyclerView

                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:id="@+id/HorizontalRV"
                android:layout_below="@+id/view"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:onClick="@{clickHandler::onFABClicked}"
                android:text="add Car"></com.google.android.material.floatingactionbutton.FloatingActionButton>

        </RelativeLayout>

    </FrameLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/MainGreen">
 <View
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="@drawable/homeborder"
           android:id="@+id/view"
           ></View>

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/profileimage"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="8dp"
           android:layout_marginBottom="8dp"
           android:src="@drawable/profileimage"
           app:civ_border_color="@color/black"
           app:civ_border_width="1dp"></de.hdodenhof.circleimageview.CircleImageView>
<ImageButton
           android:id="@+id/notificationButton"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/bell"
           android:layout_margin="8dp"
           android:padding="8dp"
           android:layout_alignParentRight="true"
           android:scaleType="fitCenter"
           android:contentDescription="notification" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Let's Find A "
    android:id="@+id/LetsFindA"
    android:textColor="@color/black"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_margin="8dp"
    android:textAlignment="center"
    android:layout_below="@+id/profileimage"
    ></TextView>
<TextView
    android:id="@+id/parking"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Parking "
    android:textAlignment="center"
    android:textStyle="bold"
    android:textColor="@color/MainGreen"
    android:textSize="18sp"
    android:layout_below="@+id/profileimage"
    android:layout_toRightOf="@+id/LetsFindA"
    android:layout_marginTop="8dp"
    ></TextView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Space "
      android:id="@+id/SpaceText"
    android:textAlignment="center"
    android:textStyle="bold"
    android:textColor="@color/MainGreen"
    android:textSize="18sp"
    android:layout_below="@+id/LetsFindA"
    android:layout_marginLeft="8dp"

    ></TextView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="For You"
           android:textSize="18sp"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textAlignment="center"
           android:layout_below="@+id/LetsFindA"
           android:layout_toRightOf="@+id/SpaceText"
    ></TextView>

<androidx.recyclerview.widget.RecyclerView

    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    android:id="@+id/HorizontalRV"
    android:layout_below="@+id/view"
    >

</androidx.recyclerview.widget.RecyclerView>

   </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethod">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_above="@+id/frameButtonPayNow"
     >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <View
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="@drawable/parkinglotborder"
             android:id="@+id/view"
             />
         <ImageView
             android:layout_margin="16dp"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/baseline_arrow_back_ios_new_24"
             android:padding="12dp"
             android:clickable="true"
             android:contentDescription="backArrowPaymentMethod"
             />
         <TextView
             android:layout_marginTop="32dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="payment method"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@color/white"
             android:layout_centerHorizontal="true"
             android:id="@+id/TextPaymentMethod"
             />

         <ImageView
             android:layout_below="@+id/view"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:scaleType="fitCenter"
             android:src="@drawable/phising"
             android:id="@+id/phisingImage"
             ></ImageView>
         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/edit_text_border"
             android:layout_below="@+id/phisingImage"
             android:layout_marginHorizontal="32dp"
             android:layout_marginTop="16dp"
             android:padding="16dp"
             >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageView
                     android:layout_width="18dp"
                     android:layout_height="18dp"
                     android:src="@drawable/plus"
                     android:id="@+id/plus"
                     ></ImageView>

                 <TextView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="32dp"
                     android:layout_toRightOf="@+id/plus"
                     android:text="Add New Card"
                     android:textColor="@color/Grey"
                     android:textSize="12dp"
                     android:textStyle="bold"
                     tools:ignore="TextSizeCheck" />
             </RelativeLayout>
         </FrameLayout>

     </RelativeLayout>
 </ScrollView>

    <FrameLayout
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackt"
        android:id="@+id/frameButtonPayNow"
        >

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pay now"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/ButtonPayNow"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/nextborder"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            />
    </FrameLayout>

</RelativeLayout>